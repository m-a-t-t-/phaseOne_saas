<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <!--<div class="well">-->
    <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group"> <!--added form-group class -->
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %> <!--added form-control class -->
        </div>
      
        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>
      
        <% if devise_mapping.rememberable? -%> <!-- what the hell is that (some next ruby code) -->
          <div class="field form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
      
        <div class="actions form-group">
          <%= f.submit "Log in", class: 'btn btn-success' %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    <!--</div> WELL-->
  </div>
</div>